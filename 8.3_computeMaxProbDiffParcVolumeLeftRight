#!/bin/bash

if [ "$#" -lt 2 ]
then
	 echo "Usage: $0 <work_dir> <out_folder> <subjlist>"
	 exit 1
fi


#look for atlases in <scripts_dir>/atlases
execpath=`dirname $0`
execpath=`realpath $execpath`

work_dir=$1
out_folder=$2
subjlist=$3
shift 3


. $parcellate_cfg


subjlist=`realpath $subjlist`

mni_suffix=reg-affine_space-$atlas
subj_suffix=space-T1w

out_csv_atlas=`realpath $out_folder`/volumes_${bids_tags}_diffparc_$mni_suffix.csv
out_csv=`realpath $out_folder`/volumes_${bids_tags}_diffparc_$subj_suffix.csv

pushd $work_dir


if [ "$legacy_dwi_proc" = 1 ]
then
track_dir=$legacy_dwi_path/bedpost.${parcellation_name}/probtrack
else
track_dir=bedpost.${parcellation_name}/probtrack
fi


computeSegVolume StriatumTargets_Hemi.csv $track_dir/$atlas/diffusion_parcellation.masked.nii.gz  $subjlist > $out_csv_atlas
computeSegVolume StriatumTargets_Hemi.csv $track_dir/diffusion_parcellation.masked.nii.gz  $subjlist > $out_csv

popd

exit 0
