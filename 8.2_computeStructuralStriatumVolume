#!/bin/bash

if [ "$#" -lt 2 ]
then
	 echo "Usage: $0 <work_dir> <out_folder> <subjlist>"
	 exit 1
fi

#look for atlases in <scripts_dir>/atlases
execpath=`dirname $0`
execpath=`realpath $execpath`

work_dir=$1
out_folder=$2
subjlist=$3
shift 3


. $parcellate_cfg


subjlist=`realpath $subjlist`

pushd $work_dir

out_csv=`realpath $out_folder`/volumes_striatum_unparcellated.csv

computeSegVolume StriatumStructural.csv labels/t1/striatum_bspline_f3d_$atlas/striatum-structural-1mm.hemi.nii.gz $1 > $out_csv 

popd
